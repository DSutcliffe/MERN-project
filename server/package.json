{
  "name": "MERN-project",
  "version": "1.0.0",
  "description": "MongoDB     - Database (Mongoose)  \r ExpressJS   - Web Framework (Handle requests and responses)  \r ReactJS     - Client side user interface  \r NodeJS      - Server",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node index",
    "client-install": "cd client && npm install",
    "server-install": "cd server && npm install",
    "install-all": "concurrently \"npm run client-install\" \"npm run server-install\"",
    "client": "cd client && npm run start",
    "server": "cd server && nodemon index",
    "dev": "concurrently \"npm run client\" \"npm run server\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DSutcliffe/MERN-project.git"
  },
